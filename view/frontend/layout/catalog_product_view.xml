<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.details">
            <block class="Vovayatsyuk\Alsoviewed\Block\ListProduct"
                    name="alsoviewed.products.tab"
                    template="Magento_Catalog::product/list.phtml"
                    group="detailed_info">
                <action method="setTitle">
                    <argument translate="true" name="title" xsi:type="string">Also Viewed Products</argument>
                </action>
                <action method="setProductsCount">
                    <argument name="products_count" xsi:type="number">6</argument>
                </action>
                <action method="setMode">
                    <argument name="mode" xsi:type="string">grid</argument>
                </action>
            </block>
        </referenceBlock>
    </body>
</page>
