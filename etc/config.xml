<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <alsoviewed>
            <product_tab>
                <enabled>1</enabled>
                <title>Also Viewed Products</title>
                <block_title>People who viewed this product also viewed</block_title>
                <basis>current</basis>
                <products_count>4</products_count>
                <mode>grid</mode>
                <block_css>widget alsoviewed-products</block_css>
            </product_tab>
            <session>
                <limit>10</limit>
            </session>
            <perfomance>
                <chunk_size>500</chunk_size>
            </perfomance>
        </alsoviewed>
    </default>
</config>
